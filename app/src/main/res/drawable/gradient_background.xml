<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#E3F2FD" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="0"
                android:centerY="0"
                android:startColor="#9AA1ED"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="1"
                android:centerY="0"
                android:startColor="#78A4AB"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="0"
                android:centerY="1"
                android:startColor="#8FC3F4"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="1"
                android:centerY="1"
                android:startColor="#DFD5F4"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

</layer-list>